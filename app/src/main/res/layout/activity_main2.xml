<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:alpha="255"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="@drawable/background"
    android:id="@+id/relativeLayout"
    android:nestedScrollingEnabled="true">



    <TextView android:text="What is happening?" android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginTop="60dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/Hello"
        android:textColor="#3d9bf5"
        android:textSize="25sp"
        android:textStyle="bold|italic" />

    <Button
        android:background="@drawable/rounded_button"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:text="Send Tweet"
        android:id="@+id/convenient_button"
        android:layout_centerInParent="true"
        android:nestedScrollingEnabled="true"
        android:textColor="#fefefe"
        android:textStyle="bold"
        android:theme="@style/Base.V7.Theme.AppCompat.Dialog"
        android:textSize="17dp"
        android:layout_marginTop="60dp"
        android:layout_below="@+id/txtInput"
        android:layout_centerHorizontal="true" />


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtInput"
        android:layout_marginTop="170dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="false"
        android:layout_alignParentRight="true"
        android:alpha="100"
        android:textColor="#2d75ba"
        android:textSize="20sp"
        android:textStyle="bold"
        style="@style/ComposerLight" />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="50dp"
        android:background="@drawable/drawer_icon"
        android:id="@+id/imageView"
        android:layout_marginLeft="0dp"
        android:layout_alignParentTop="false"
        android:layout_alignParentLeft="false"
        android:layout_alignParentStart="false" />


</RelativeLayout>
    <ListView
        android:id="@+id/navList"
        android:layout_width="250dp"
        android:layout_height="match_parent"
        android:layout_gravity="left|start"
        android:background="@drawable/drawer_background"/>
</android.support.v4.widget.DrawerLayout>
